{
  "ff_scale": {
    "description": "Scale video using ENV variable",
    "input": "../../../tests/samples/sample_video.mp4",
    "output": "scaled_<ENV_TEST_VAR>.mp4",
    "width": 640,
    "height": 480
  },
  "ff_text": {
    "description": "Add text with folder name and title",
    "input": "scaled_<ENV_TEST_VAR>.mp4",
    "output": "text_<FOLDER_NAME>.mp4",
    "text": "Hello <FOLDER_TITLE>!",
    "x": "10",
    "y": "10",
    "fontsize": "24",
    "color": "<CONSTANT_RANDOM_COLOUR>"
  },
  "ff_watermark": {
    "description": "Add watermark with date and random colors",
    "input": "text_<FOLDER_NAME>.mp4",
    "watermark": "../../../tests/samples/sample_image.png",
    "output": "watermark_<DATE_%d-%m-%y>.mp4",
    "xpixels": "10",
    "ypixels": "10",
    "scale": "0.2",
    "alpha": "0.7"
  }
}
