{
    "schedule": "TRUE",
    "category": "stack",

    "ff_scale1": {
        "input": "./"
    },
    
    "ff_to_landscape": {
        "input": "./",
        "grep": "ff_scale"
    },

    "ff_grouptime1": {
        "input": "./",
        "output": "ff_grouptime1.mp4",
        "grep": "ff_to_landscape"
    },

    "ff_grouptime2": {
        "input": "./",
        "output": "ff_grouptime2.mp4",
        "grep": "ff_to_landscape",
        "arrangement": "reversed"
    },

    "ff_stack": {
        "input1": "ff_grouptime1.mp4",
        "input2": "ff_grouptime2.mp4",
        "vertical": ""
    },

    "ff_lut": {
        "input": "ff_stack.mp4",
        "lut": "../lib/luts/Lundmark.cube"
    },

    "ff_watermark": {
        "input": "ff_lut.mp4",
        "watermark": "../lib/watermarks/ldnpk_white.png",
        "xpixels": "(W-w)/2",
        "ypixels": "(H-h)/2",
        "scale": "0.25"
    },

    "ff_thumbnail": {
        "input": "ff_watermark.mp4",
        "output": "ff_thumbnail.png",
        "count": "1"
    }
}